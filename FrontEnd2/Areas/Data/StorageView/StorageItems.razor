                                    <Card Margin="Margin.Is1.FromBottom.FromTop">
                                        <CardBody>
                                            <CardTitle Size="4">@p._productName</CardTitle>
                                            <Field>
                                                <FieldBody>
                                                    <ListGroup IsFlush="true">
                                                        <ListGroupItem><CardText>@p._storeName </CardText></ListGroupItem>
