                    </FieldBody>
                    <FieldBody ColumnSize="ColumnSize.Is2">
                    </FieldBody>
                </Field>
                <Snackbar @ref="sUndoDelete">
                    <SnackbarBody>
                        @snacbarMessage
                    </SnackbarBody>
                    <SnackbarAction Clicked="@(async () => await UndoSnackbar())">UNDO</SnackbarAction>
                </Snackbar>
                <Snackbar @ref="sRegretChange">
                    <SnackbarBody>
                        @snacbarMessage
                    </SnackbarBody>
                </Snackbar>
                <Snackbar @ref="sQucikadd">
                    <SnackbarBody>
                        @snacbarMessage
                    </SnackbarBody>
                </Snackbar>
                <Snackbar @ref="BiksfoodAdd">
