                        </FieldBody>
                    }
                </Fields>
            </CardBody>
            <CardBody Padding="Padding.Is0.OnY">
                <ListGroup IsFlush="true" Class="text-center">
                    @foreach (Product p in user.storage.storageList)
                    {
                        <StorageItem Product="@p" StatusChanged="@(OnStatusChanged)"></StorageItem>
                    }
                </ListGroup>
            </CardBody>
