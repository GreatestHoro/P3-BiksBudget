                    <Field ColumnSize="ColumnSize.IsFull" JustifyContent="JustifyContent.Center">
                        <CloseButton Float="Float.Right" Clicked="@hideQuickaddModal" />
                        <ModalTitle>
                            <Icon Name="@(FontAwesomeIcons.Search)" />
                            Quickadd Producs
                        </ModalTitle>
                        <Text Color="TextColor.Muted" Alignment="TextAlignment.Center">@searchResultAmountMsg()</Text>
                    </Field>
                </ModalHeader>
                <ModalBody Margin="Margin.Is1.FromBottom.FromTop">
                    <Autocomplete Data="@prodData"
                                  TextField="@((item) => item.textField)"
                                  ValueField="@((item) => item.textField)"
                                  SelectedValue="@selectedSearchValue"
                                  SelectedValueChanged="@searchHandler"
                                  Placeholder="Enter a product name..."
                                  Filter="AutocompleteFilter.Contains"
                                  MinLength="2"
                                  IsDisabled="FindingAutocorrectlist" />
